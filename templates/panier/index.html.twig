{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
    <div class="panier">
        <style>
            .panier h1{color: #0a0a0a ;font-size: 30px;
                text-align: -moz-center}
        </style>

        <table class="table">
            <thead>
            <tr>
                <th>Article</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th></th>

            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.article.title }}</td>
                    <td>{{ item.article.price }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.article.price * item.quantity }}</td>
                    <td>
                        <a href="/panier/del/{{item.article.id}}"class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total :</td>
                <td>{{ total }}</td>


            </tr>

                <td><a href=""><button type="submit" class="btn btn-success">commander</button></a></td>



            </tfoot>
        </table>
    </div>

{% endblock %}

