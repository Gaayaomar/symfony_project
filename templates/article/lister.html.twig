{% extends 'base.html.twig' %}
{% block title %}lister{% endblock %}

{% block body %}


    <body>



                <!-- STORE -->
                <div id="store" class="col-md-9">
                    <!-- store top filter -->
                    <div class="store-filter clearfix">
                        <div class="store-sort">
                            <label>
                                Sort By:
                                <select class="input-select">
                                    <option value="0">price</option>

                                </select>
                            </label>


                        </div>

                    </div>
                    <!-- /store top filter -->

                    <!-- store products -->
                    <div class="row">
                        <!-- product -->
                        {% for article in articles %}
                        <div class="col-md-4 col-xs-6">
                            <div class="product">
                                <div class="product-img">
                                    <img src="/img/{{ article.image }}" alt="">

                                </div>
                                <div class="product-body">
                                    <p class="product-category">{{ article.category }}</p>
                                    <h3 class="product-name"><a href="#">{{ article.title }}</a></h3>
                                    <h4 class="product-price">${{ article.price}}</h4>
                                    <div class="product-rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product-btns">
                                        <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                        <button onclick="window.location.href='{{path ('article_show',{'id':article.id}) }}'" class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
                                    </div>
                                </div>
                                <div class="add-to-cart">
                                    <a href="/panier/add/{{ article.id }}/articleall"><button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button></a>

                                </div>
                            </div>
                        </div>
                        {% endfor %}

                        <!-- /product -->



                </div>
                    <div class="navigation" >
                        {{ knp_pagination_render(articles) }}
                    </div>
                <!-- /STORE -->
            </div>
            <!-- /row -->
    </body>

{% endblock %}
